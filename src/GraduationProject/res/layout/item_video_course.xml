<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
		>

	<ImageView
			android:id="@+id/ivCourse"
			android:layout_weight="3"
			android:src="@drawable/video_test"
			android:contentDescription="视频图片"
			android:layout_width="@dimen/normal_dp_0"
			android:layout_height="wrap_content"
			/>


	<TextView
			android:id="@+id/tvCourseDesc"
			android:text="我在测试"
			android:textSize="@dimen/normal_dp_20"
			android:layout_marginLeft="@dimen/normal_dp_8"
			android:maxLines="2"
			android:textColor="@color/black"
			android:layout_weight="5"
			android:gravity="center_vertical"
			android:layout_width="@dimen/normal_dp_0"
			android:layout_height="match_parent"
			/>

</LinearLayout>